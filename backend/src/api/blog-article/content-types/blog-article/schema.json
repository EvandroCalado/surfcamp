{
  "kind": "collectionType",
  "collectionName": "blog_articles",
  "info": {
    "singularName": "blog-article",
    "pluralName": "blog-articles",
    "displayName": "Blog Article",
    "description": ""
  },
  "options": {
    "draftAndPublish": true
  },
  "pluginOptions": {},
  "attributes": {
    "headline": {
      "type": "string",
      "required": true
    },
    "excerpt": {
      "type": "string",
      "required": true
    },
    "image": {
      "type": "media",
      "multiple": false,
      "required": true,
      "allowedTypes": [
        "images"
      ]
    },
    "slug": {
      "type": "uid",
      "targetField": "headline"
    },
    "isHighlightArticle": {
      "type": "boolean",
      "default": false,
      "required": true
    },
    "author": {
      "type": "relation",
      "relation": "manyToOne",
      "target": "api::author.author",
      "inversedBy": "blog_articles"
    },
    "content": {
      "type": "customField",
      "options": {
        "output": "HTML",
        "preset": "rich"
      },
      "required": true,
      "customField": "plugin::ckeditor.CKEditor"
    }
  }
}
